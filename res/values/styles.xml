<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="ExtraBigText">
        <item name="android:textSize">@dimen/text_extra_large</item>
    </style>
    
    <style name="BigText">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="MediumText">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="SmallText">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="ExtraSmallText">
        <item name="android:textSize">@dimen/text_extra_small</item>
    </style>
    
    <style name="MainContainer">
        <item name="android:background">@drawable/img_bg</item>
        <item name="android:padding">@dimen/padding_large</item>
    </style>

   <style name="HeaderTitle" parent="BigText">
		<item name="android:padding">@dimen/padding_medium</item>
		<item name="android:textColor">@color/black</item>	
	</style>
	
   <style name="CommonText" parent="SmallText">
		<item name="android:textColor">@color/default_text_color</item>
		<item name="android:layout_marginBottom">5dp</item>
		<item name="android:layout_marginTop">3dp</item>
	</style>
	
   <style name="MechanicText" parent="MediumText">
		<item name="android:textColor">@color/white</item>
		<item name="android:layout_marginBottom">5dp</item>
		<item name="android:layout_marginTop">3dp</item>
	</style>
	
   <style name="Score" parent="ExtraBigText">
		<item name="android:textColor">@color/score</item>
	</style>

</resources>